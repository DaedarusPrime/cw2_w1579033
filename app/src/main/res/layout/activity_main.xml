<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <TextView
            android:id="@+id/intro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="20dp"
            android:text="Appointment Manager"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="bold" />

        <CalendarView
            android:id="@+id/simpleCalendarView"
            android:layout_below="@id/intro"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:firstDayOfWeek="2"
            android:maxDate="01/01/2020"
            android:minDate="01/01/2017" />


        <Button
            android:id="@+id/create_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Create Appointment"
            android:textColor="#ff333333"
            android:textSize="5sp"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_below="@+id/simpleCalendarView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <Button
            android:id="@+id/view_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="View and Edit Appointments"
            android:textColor="#ff333333"
            android:textSize="5sp"
            android:textStyle="bold"
            android:layout_marginLeft="11dp"
            android:layout_below="@+id/simpleCalendarView"
            android:layout_toRightOf="@+id/create_btn"
            android:layout_toEndOf="@+id/create_btn"
            android:layout_marginStart="11dp" />
        <Button
            android:id="@+id/delete_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Delete Appointment"
            android:textColor="#ff333333"
            android:textSize="5sp"
            android:textStyle="bold"
            android:layout_below="@+id/create_btn"
            android:layout_alignLeft="@+id/create_btn"
            android:layout_alignStart="@+id/create_btn" />

        <Button
            android:id="@+id/move_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Move Appointment"
            android:textColor="#ff333333"
            android:textSize="5sp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/view_btn"
            android:layout_alignStart="@+id/view_btn" />

        <Button
            android:id="@+id/search_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="Search for an Appointment"
            android:textColor="#ff333333"
            android:textSize="5sp"
            android:textStyle="bold"
            android:layout_below="@+id/view_btn"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>
</ScrollView>
